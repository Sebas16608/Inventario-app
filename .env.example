# ========================================
# DJANGO CONFIGURATION
# ========================================

# Clave secreta de Django (mínimo 50 caracteres)
# Generar con: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-super-secret-key-change-this-minimum-50-chars

# Modo debug - NUNCA cambiar a True en producción
DEBUG=True

# Hosts permitidos (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Opción 1: Usar DATABASE_URL (recomendado con python-decouple)
DATABASE_URL=postgresql://inventario_user:your_password@localhost:5432/inventario_db

# Opción 2: Variables individuales (alternativa)
# DATABASE_ENGINE=django.db.backends.postgresql
# DATABASE_NAME=inventario_db
# DATABASE_USER=inventario_user
# DATABASE_PASSWORD=your_password
# DATABASE_HOST=localhost
# DATABASE_PORT=5432

# ========================================
# JWT AUTHENTICATION
# ========================================

# Clave secreta para firmar tokens JWT
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production

# Tiempo de expiación del token (en segundos)
# 3600 = 1 hora, 86400 = 1 día
JWT_EXPIRATION_TIME=3600

# ========================================
# SECURITY (Producción)
# ========================================

# Redirigir a HTTPS en producción
SECURE_SSL_REDIRECT=False

# HTTPS solo para cookies de sesión
SESSION_COOKIE_SECURE=False

# HTTPS solo para cookies CSRF
CSRF_COOKIE_SECURE=False

# ========================================
# EMAIL CONFIGURATION (Opcional)
# ========================================

# Backend de email (para notificaciones, recuperación contraseña, etc)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Para usar SMTP (Gmail, SendGrid, etc):
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ========================================
# ENVIRONMENT
# ========================================

# Tipo de entorno: development, staging, production
ENVIRONMENT=development

# Nivel de logging
LOG_LEVEL=DEBUG

# ========================================
# API CONFIGURATION
# ========================================

# Número máximo de resultados por página
API_PAGE_SIZE=100

# Habilitar documentación Swagger/OpenAPI
API_SWAGGER_ENABLED=True

# ========================================
# CROSS-ORIGIN RESOURCE SHARING (CORS)
# ========================================

# Dominios permitidos para CORS (separados por comas)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ========================================
# CACHE CONFIGURATION (Opcional)
# ========================================

# Backend de cache (Redis)
# CACHE_BACKEND=redis://localhost:6379/1
# O usar cache en memoria (desarrollo):
# CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache

# ========================================
# CELERY CONFIGURATION (Opcional)
# ========================================

# Para tareas asincrónicas
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ========================================
# AWS S3 (Para almacenamiento de archivos)
# ========================================

# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ========================================
# SENTRY (Error tracking en producción)
# ========================================

# SENTRY_DSN=https://...@sentry.io/projectid

# ========================================
# NOTAS IMPORTANTES
# ========================================

# 1. NUNCA compartir este archivo con secretos reales
# 2. NUNCA hacer commit de .env a git
# 3. En producción, usar variables de entorno del servidor
# 4. Cambiar todos los "your-..." por valores reales
# 5. Usar contraseñas fuertes (mínimo 16 caracteres)
# 6. Regenerar SECRET_KEY y JWT_SECRET_KEY en cada instalación

# ========================================
# EJEMPLO DE PRODUCCIÓN (NO USAR DIRECTAMENTE)
# ========================================

# DEBUG=False
# ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# DATABASE_URL=postgresql://user:pass@rds-endpoint:5432/db
# ENVIRONMENT=production
