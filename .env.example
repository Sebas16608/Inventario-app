# ========================================
# DJANGO CONFIGURATION
# ========================================

# Clave secreta de Django (mínimo 50 caracteres)
# Generar con: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=your-super-secret-key-change-this-minimum-50-chars

# Modo debug - NUNCA cambiar a True en producción
DEBUG=False

# Hosts permitidos (separados por comas)
# En Render: ALLOWED_HOSTS=yourdomain.onrender.com,yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.onrender.com

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Para Render PostgreSQL: DATABASE_URL se proporciona automáticamente
# Para desarrollo local:
DATABASE_URL=postgresql://inventario_user:your_password@localhost:5432/inventario_db

# ========================================
# SECURITY (Producción)
# ========================================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ========================================
# CROSS-ORIGIN RESOURCE SHARING (CORS)
# ========================================
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ========================================
# LOGGING
# ========================================
DJANGO_LOG_LEVEL=INFO

# ========================================
# RENDER.COM SPECIFIC
# ========================================
PYTHON_VERSION=3.13.1
